@model DAIF2020.Models.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "ListClubStatuses";
}

<h1>Club Statuses</h1>

<a class="btn btn-sm btn-success" asp-controller="ClubStatus" asp-action="Create">Create new status</a>

<table class="table table-responsive-sm table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClubStatuses[0].ClubStatusName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ClubStatuses.OrderBy(c => c.ClubStatusName))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClubStatusName)
                </td>

                <td>
                    <a class="btn btn-sm btn-success" asp-controller="ClubStatus" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-success" asp-controller="ClubStatus" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-controller="ClubStatus" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

