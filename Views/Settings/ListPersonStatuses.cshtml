@model DAIF2020.Models.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "ListPersonStatuses";
}

<h1>Person Statuses</h1>

<a class="btn btn-sm btn-success" asp-controller="PersonStatus" asp-action="Create">Create new status</a>

<table class="table table-responsive-sm table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonStatuses[0].PersonStatusName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PersonStatuses.OrderBy(p => p.PersonStatusName))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonStatusName)
                </td>

                <td>
                    <a class="btn btn-sm btn-success" asp-controller="PersonStatus" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-success" asp-controller="PersonStatus" asp-action="Details" asp-route-id="@item.Id">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>