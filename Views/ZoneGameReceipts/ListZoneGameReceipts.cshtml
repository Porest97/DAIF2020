@model DAIF2020.TheLab.Models.VeiwModels.ZoneGameReceiptsViewModel
@{
    ViewData["Title"] = "ListZoneGameReceipts";
}

<h1>Zonegamereceipts</h1>
<a class="btn btn-sm btn-success" asp-controller="ZoneGameReceipts" asp-action="Create">Create new Zonegame Receipt</a>
<a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Economics">Back to Economics</a>

<table class="table table-responsive-sm table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ZoneGameReceipts[0].ZoneGame.ZoneGameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZoneGameReceipts[0].ZoneGame.Arena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZoneGameReceipts[0].ZoneGame.ZoneGameDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZoneGameReceipts[0].ZoneGame.TSMNumbers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZoneGameReceipts[0].ZoneGame.UDZ1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZoneGameReceipts[0].ZoneGame.UDZ2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZoneGameReceipts[0].ReceiptStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ZoneGameReceipts.OrderBy(sgr => sgr.ZoneGame.ZoneGameDateTime))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneGame.ZoneGameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneGame.Arena.ArenaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneGame.ZoneGameDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneGame.TSMNumbers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneGame.UDZ1.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneGame.UDZ2.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceiptStatus.ReceiptStatusName)
                </td>
                <td>
                    <a class="btn btn-sm btn-success" asp-controller="ZoneGameReceipts" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-success" asp-controller="ZoneGameReceipts" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-outline-success" asp-controller="ZoneGameReceipts" asp-action="ZoneGameReceipt" asp-route-id="@item.Id">Receipt</a>
                    <a class="btn btn-sm btn-danger" asp-controller="ZoneGameReceipts" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
