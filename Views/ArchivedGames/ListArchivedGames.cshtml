@model DAIF2020.Models.ViewModels.ArchivedGamesViewModel
@{
    ViewData["Title"] = "ListArchivedGames";
}

<h1>Archived games (ALL)</h1>
<div class="badge text-md-center">
    <h4>Hours: @Model.ArchivedGames.Sum(a => a.ParticipatedTime)</h4>
    <a class="btn btn-sm btn-success" asp-controller="ArchivedGames" asp-action="Create">Create new Game</a>
    <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Games">Back to Games</a>
</div>
<div class="badge text-md-center">
    <table class="table table-responsive-sm table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].Id)</th>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].Person)</th>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].DateTime)</th>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].GameNumber)</th>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].GameType)</th>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].Arena)</th>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].HomeTeam)</th>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].AwayTeam)</th>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].Score)</th>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].ParticipatedTime)</th>
                @*<th>@Html.DisplayNameFor(model => model.ArchivedGames[0].Id)</th>
                <th>@Html.DisplayNameFor(model => model.ArchivedGames[0].Id)</th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ArchivedGames.OrderBy(a => a.DateTime))
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Person.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.GameNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.GameType)</td>
                    <td>@Html.DisplayFor(modelItem => item.Arena)</td>
                    <td>@Html.DisplayFor(modelItem => item.HomeTeam)</td>
                    <td>@Html.DisplayFor(modelItem => item.AwayTeam)</td>
                    <td>@Html.DisplayFor(modelItem => item.Score)</td>
                    <td>@Html.DisplayFor(modelItem => item.ParticipatedTime)</td>
                    @*<td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>*@
                    <td>
                        <a class="btn btn-sm btn-success" asp-controller="ArchivedGames" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-success" asp-controller="ArchivedGames" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-sm btn-danger" asp-controller="ArchivedGames" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
