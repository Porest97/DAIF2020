@model DAIF2020.Models.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "ListReceiptCategories";
}

<h1>Receipt Categories</h1>

<a class="btn btn-sm btn-success" asp-controller="ReceiptCategories" asp-action="Create">Create new category</a>

<table class="table table-responsive-sm table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReceiptCategories[0].ReceiptCategoryName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReceiptCategories.OrderBy(r => r.ReceiptCategoryName))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceiptCategoryName)
                </td>

                <td>
                    <a class="btn btn-sm btn-success" asp-controller="ReceiptCategories" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-success" asp-controller="ReceiptCategories" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-controller="ReceiptCategories" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
