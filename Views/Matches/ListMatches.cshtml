@model DAIF2020.SRHLStats2020.Models.ViewModels.MatchesViewModel
@{
    ViewData["Title"] = "ListMatches";
}

<h1>Matches - SRHL Stats from 2015</h1>

<div class="badge-info text-sm-center">
    <a class="btn btn-sm btn-success" asp-controller="Games" asp-action="Create">Create new Game</a>
    <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Games">Back to Games</a>
</div>
<div class="badge text-sm-center">
    <table class="table table-responsive-sm table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Matches[0].Series)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].MatchCategory)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].MatchDateTime)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].Arena)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].HomeTeam)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].AwayTeam)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].Result)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].HD1)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].HD2)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].LD1)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].LD2)</th>
                <th>@Html.DisplayNameFor(model => model.Matches[0].MatchStatus)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Matches.OrderBy(g => g.MatchDateTime))
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Series.SeriesName)</td>
                    <td>@Html.DisplayFor(modelItem => item.MatchCategory.MatchCategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.MatchDateTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Arena.ArenaName)</td>
                    <td>@Html.DisplayFor(modelItem => item.HomeTeam.LagNamn)</td>
                    <td>@Html.DisplayFor(modelItem => item.AwayTeam.LagNamn)</td>
                    <td>@Html.DisplayFor(modelItem => item.Result)</td>
                    <td>@Html.DisplayFor(modelItem => item.HD1.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.HD2.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LD1.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LD2.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.MatchStatus.MatchStatusName)</td>
                    <td>
                        <a class="btn btn-sm btn-success" asp-controller="Matches" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-success" asp-controller="Matches" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-sm btn-danger" asp-controller="Matches" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
