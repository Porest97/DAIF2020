@model DAIF2020.Models.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "ListGameStatuses";
}

<h1>Game Statuses</h1>

<a class="btn btn-sm btn-success" asp-controller="GameStatus" asp-action="Create">Create new status</a>

<table class="table table-responsive-sm table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameStatuses[0].GameStatusName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GameStatuses.OrderBy(g => g.GameStatusName))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameStatusName)
                </td>

                <td>
                    <a class="btn btn-sm btn-success" asp-controller="GameStatus" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-success" asp-controller="GameStatus" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-controller="GameStatus" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>