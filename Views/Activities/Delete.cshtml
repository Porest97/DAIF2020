@model DAIF2020.Planner.Models.DataModels.Activity

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Activity</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityStatus.ActivityStatusName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FromDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FromDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meeting.MeetingName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FullName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
        <a class="btn btn-sm btn-success" asp-action="ListActivities">Back to Activities</a>
        <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Planner">Back to Planner</a>
    </form>
</div>
