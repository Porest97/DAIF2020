@model DAIF2020.Planner.Models.DataModels.Activity

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ActivityName" class="control-label"></label>
                <input asp-for="ActivityName" class="form-control" />
                <span asp-validation-for="ActivityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityStatusId" class="control-label"></label>
                <select asp-for="ActivityStatusId" class="form-control" asp-items="ViewBag.ActivityStatusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FromDateTime" class="control-label"></label>
                <input asp-for="FromDateTime" class="form-control" />
                <span asp-validation-for="FromDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDateTime" class="control-label"></label>
                <input asp-for="ToDateTime" class="form-control" />
                <span asp-validation-for="ToDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game" class="control-label"></label>
                <select asp-for="GameId" class="form-control" asp-items="ViewBag.GameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Meeting" class="control-label"></label>
                <select asp-for="MeetingId" class="form-control" asp-items="ViewBag.MeetingId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Person" class="control-label"></label>
                <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-success" asp-action="ListActivities">Back to Activities</a>
    <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Planner">Back to Planner</a>
</div>

