@model IEnumerable<DAIF2020.Models.DataModels.TeamRoster>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamRosterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeadCoach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssCoach)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamRosterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GM.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeadCoach.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssCoach.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
